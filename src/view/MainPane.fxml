<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
   <children>
      <VBox>
         <children>
            <HBox prefHeight="50.0" prefWidth="400.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <children>
                  <Button fx:id="openFileButton" mnemonicParsing="false" prefHeight="35.0" prefWidth="130.0" text="Wybierz Plik" />
                  <Label fx:id="openFileInfoLabel" prefHeight="35.0" prefWidth="250.0" textAlignment="CENTER" textFill="#b21a1a">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <ProgressBar fx:id="progresBar" prefWidth="390.0" progress="0.0">
               <VBox.margin>
                  <Insets left="15.0" />
               </VBox.margin>
            </ProgressBar>
            <VBox>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <children>
                  <Label fx:id="songName" prefWidth="300.0">
                     <VBox.margin>
                        <Insets left="50.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="songTime" prefWidth="300.0">
                     <VBox.margin>
                        <Insets left="50.0" top="10.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
            <HBox>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
               </VBox.margin>
               <children>
                  <Button fx:id="stopButton" mnemonicParsing="false" prefWidth="100.0" text="Stop">
                     <HBox.margin>
                        <Insets left="30.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="pauseButton" mnemonicParsing="false" prefWidth="100.0" text="Pauza">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="playButton" mnemonicParsing="false" prefWidth="100.0" text="Start">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
